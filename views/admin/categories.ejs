<%- include("../layout/admin_header.ejs")%>


<div class="main">
  <%- include("../layout/admin_navbar.ejs")%>

  <div class="container-fluid">
    <div class="page-title">
      <h1>分类目录</h1>
    </div>
    <!-- 有错误信息时展示 -->
    <div class="alert alert-danger" style="width:200px;display: none">
        <strong>警告警告！</strong><span></span>
      </div> 
    <div class="row">
      <div class="col-md-4">
        <form>
          <input type="hidden" name="id" id="id">
          <h2>添加新分类目录</h2>
          <div class="form-group">
            <label for="name">名称</label>
            <input id="name" class="form-control" name="name" type="text" placeholder="分类名称">
          </div>
          <div class="form-group">
            <label for="slug">别名</label>
            <input id="slug" class="form-control" name="slug" type="text" placeholder="slug">
            <p class="help-block">https://zce.me/category/<strong>slug</strong></p>
          </div>
          <div class="form-group">
            <input class="btn btn-primary addCategories" type="button" value="添加">
          </div>
        </form>
      </div>
      <div class="col-md-8">
        <div class="page-action">
          <!-- show when multiple checked -->
          <a class="btn btn-danger btn-sm btn-del" href="javascript:;" style="display: none">批量删除</a>
        </div>
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th class="text-center" width="40"><input type="checkbox" class="checkAll"></th>
              <th>名称</th>
              <th>Slug</th>
              <th class="text-center" width="100">操作</th>
            </tr>
          </thead>
          <tbody>


          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<%- include("../layout/admin_aside.ejs")%>


<%- include("../layout/admin_footer.ejs")%>
<script src="/node_modules/jquery/dist/jquery.js"></script>
<script src="/assets/js/categories.js"></script>
<script src="/node_modules/express/template-web.js"></script>
<script type="text/template" id="template">
          {{each data}}
              <tr>
                <td class="text-center"><input type="checkbox" class="checkOne" data-id="{{$value.id}}"></td>
                <td>{{$value.name}}</td>
                <td>{{$value.slug}}</td>
                <td class="text-center">
                  <a href="javascript:;" data-id="{{$value.id}}" data-name="{{$value.name}}" data-slug="{{$value.slug}}" class="btn btn-info btn-xs editCategories">编辑</a>
                  <a href="javascript:;" data-id="{{$value.id}}" class="btn btn-danger btn-xs delCategories">删除</a>
                </td>
              </tr>
          {{/each}}
</script>